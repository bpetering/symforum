{% extends 'base.html.twig' %}

{% block title %}Ben&lsquo;s Forum{% endblock %}

{% block stylesheets %}
    <style>
    .logout-link { color: #fff; }
    .icon { font-size: 2em; }
    </style>
{% endblock %}

{% block body %}
    <section class="intro hero is-primary">
        <div class="hero-body">
            <div class="container">
                <div class="columns">
                    <div class="column is-one-quarter">
                    <h1 class="title">Ben&lsquo;s Forum</h1>
                    <h2 class="subtitle">A friendly place to discuss things</h2>
                    </div>
                    <div class="column is-one-quarter">&nbsp;</div>
                    <div class="column is-one-quarter">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <p>Logged in as </p>
                            <h3 class="subtitle">{{ app.user.email }}</h3>
                        {% endif %}
                    </div>
                    <div class="column is-one-quarter">
                        <a href="{{ path('app_logout') }}" title="Logout" class="logout-link">
                            <span class="icon"><i class="fas fa-sign-out-alt"></i></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% for subforum in subforums %}
    <section class="section">
    <div class="container">
        <div class="box">
        <h4 class="subtitle is-4">{{ subforum.name }}</h2>
        {#
        <div class="subforum-latest-posts subforum-posts">
            {% for post in subforum.recent_posts %}
                <div class="post-preview">
                    <div class="post-topic"></div>
                    <div class="post-author"></div>
                </div>
            {% endfor %}
            </div>
        </div>
        #}
    </div>
    </div>
    </section>
    {% endfor %}

</div>
{% endblock %}
